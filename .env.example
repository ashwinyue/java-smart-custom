# 智能客服系统环境变量配置示例
# 复制此文件为.env并填入实际值

# Spring AI Alibaba DashScope API密钥
DASHSCOPE_API_KEY=your-dashscope-api-key-here

# 数据库配置
DB_URL=jdbc:h2:mem:testdb
DB_USERNAME=sa
DB_PASSWORD=

# 应用程序配置
APP_PORT=8080
APP_CONTEXT_PATH=/api

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/smart-custom.log

# 插件配置
PLUGIN_ENABLED=true
PLUGIN_HOT_RELOAD=true

# 工具配置
TOOL_ENABLED=true
TOOL_TIMEOUT=30000

# 聊天配置
CHAT_MAX_HISTORY=20
CHAT_SESSION_TIMEOUT=3600000

# API配置
API_VERSION=v1
API_CORS_ALLOWED_ORIGINS=*
API_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
API_CORS_ALLOWED_HEADERS=*
API_CORS_ALLOW_CREDENTIALS=true